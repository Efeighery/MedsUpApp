        <activity
            android:name="com.example.medsupapp.SpeechToText"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.Profile"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.Register"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.Login"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.MainActivity"
            android:exported="false" />

        <receiver android:name="com.example.medsupapp.AlarmReceiver" />
    </application>

</manifest>