        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MedsUpApp"
        tools:targetApi="31">
        <activity
            android:name="com.example.medsupapp.DiagnosesNotes"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.DiagnosisDetails"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.ContactNotes"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.ContactDetails"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.MedicDetails"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.MedicNotes"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.EditProfile"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.AddReminder"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.AlarmMaker"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.TextMaker"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.EmailMaker"
            android:exported="false" />
        <activity
            android:name="com.example.medsupapp.SplasherScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
